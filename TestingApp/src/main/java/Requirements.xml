<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="Entities.Requirement">
        <table name="requirement" schema="testingapp" />
        <attributes>
            <id name="id">
                <column name="ID"/>
            </id>
            <basic name="name">
                <column name="Name"/>
            </basic>
            <basic name="description">
                <column name="Description"/>
            </basic>
            <basic name="status">
                <column name="Status"/>
            </basic>
        </attributes>
    </entity>
    <entity class="Entities.Testcase">
        <table name="testcase" schema="testingapp" />
        <attributes>
            <id name="id">
                <column name="ID"/>
            </id>
            <basic name="description">
                <column name="Description"/>
            </basic>
            <basic name="title">
                <column name="Title"/>
            </basic>
            <basic name="expectedResult">
                <column name="ExpectedResult"/>
            </basic>
            <basic name="observedResult">
                <column name="ObservedResult"/>
            </basic>
            <basic name="failOrPass">
                <column name="FailOrPass"/>
            </basic>

            <many-to-one name="testrunsByTestrunId" optional="true" target-entity="Entities.Testrun">
                <join-column name="Testrun_id" nullable="false" referenced-column-name="ID"/>
            </many-to-one>
        </attributes>
    </entity>
    <entity class="Entities.Testrun">
        <table name="testrun" schema="testingapp" />
        <attributes>
            <id name="id">
                <column name="ID"/>
            </id>
            <basic name="title">
                <column name="Title"/>
            </basic>
            <basic name="deadline">
                <column name="Deadline"/>
            </basic>
            <basic name="creationDate">
                <column name="CreationDate"/>
            </basic>
            <basic name="creator">
                <column name="Creator"/>
            </basic>
            <basic name="tester">
                <column name="Tester"/>
            </basic>
            <basic name="status">
                <column name="Status"/>
            </basic>

            <one-to-many name="testcasesById" mapped-by="testrunsByTestrunId" target-entity="Entities.Testcase"/>
        </attributes>
    </entity>

</entity-mappings>
